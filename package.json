{
  "name": "@kissmybutton/motorcortex-scroller",
  "version": "1.1.7",
  "main": "dist/motorcortex-scroller.cjs.js",
  "module": "dist/motorcortex-scroller.esm.js",
  "browser": "dist/motorcortex-scroller.umd.js",
  "repository": "https://github.com/kissmybutton/motorcortex-scroller",
  "author": "KissMyButton PC (kissmybutton.gr) <opensource@kissmybutton.gr>",
  "license": "MIT",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "update-force:packages": "./node_modules/npm-check-updates/bin/ncu -u && npm i",
    "update:packages": "npm update --save/--save-dev",
    "lint": "eslint -c .eslintrc src/**/*.js",
    "lint:fix": "npm run lint -- --fix",
    "build": "npm run build:lib && npm run build:demo",
    "build:lib": "rollup -c",
    "start": "npm run build:lib && concurrently -c \"cyan.bold,magenta.bold\" \"npm:build:lib -- -w\"  \"npm:start:demo\" ",
    "start:demo": "webpack serve --config ./demo/webpack.config.js --mode=development --progress ",
    "build:demo": "webpack --mode=production --config ./demo/webpack.config.js",
    "test": "HERE GOES YOUR TEST TASK",
    "test:prod": "npm run lint",
    "commit": "git-cz",
    "prebuild": "rimraf dist"
  },
  "keywords": [
    "motorcortex",
    "animation"
  ],
  "lint-staged": {
    "*.{json,css,yml}": [
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@babel/cli": "7.15.7",
    "@babel/core": "7.15.8",
    "@babel/eslint-parser": "^7.15.8",
    "@babel/preset-env": "7.15.8",
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "12.1.4",
    "@kissmybutton/motorcortex": "7.3.0",
    "@kissmybutton/motorcortex-flubber": "1.1.9",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.1",
    "@semantic-release/github": "7.2.3",
    "@semantic-release/npm": "7.1.3",
    "babel-loader": "8.2.2",
    "browserslist": "4.17.4",
    "caniuse-lite": "1.0.30001269",
    "commitizen": "4.2.4",
    "css-loader": "5.2.7",
    "cz-conventional-changelog": "3.3.0",
    "es6-promise": "4.2.8",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-babel": "5.3.1",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.1",
    "eslint-plugin-promise": "4.3.1",
    "exports-loader": "1.1.1",
    "husky": "4.3.8",
    "imports-loader": "1.2.0",
    "lint-staged": "11.2.3",
    "prettier": "2.4.1",
    "rimraf": "3.0.2",
    "rollup": "2.58.0",
    "rollup-plugin-terser": "7.0.2",
    "semantic-release": "17.4.7",
    "stylelint": "13.13.1",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-recommended": "4.0.0",
    "stylelint-config-sass-guidelines": "8.0.0",
    "stylelint-config-standard": "21.0.0",
    "webpack": "4.46.0",
    "webpack-cli": "4.9.1",
    "webpack-dev-server": "3.11.2",
    "whatwg-fetch": "3.6.2"
  },
  "peerDependencies": {
    "@kissmybutton/motorcortex": ">= 6.4.1 < 8"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:prod"
    }
  }
}
